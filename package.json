{
  "name": "nimiq-starter",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@10.17.1",
  "description": "Nimiq Web Client starter templates for different frameworks",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/onmax/nimiq-starter.git"
  },
  "bugs": "https://github.com/onmax/nimiq-starter/issues",
  "keywords": [
    "nimiq",
    "blockchain",
    "web3",
    "starter",
    "template",
    "monorepo"
  ],
  "scripts": {
    "build": "nr -r build",
    "dev": "nr -r dev",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepublishOnly": "nr build",
    "release": "bumpp -r && pnpm -r publish",
    "test": "nr -r test",
    "typecheck": "nr -r typecheck",
    "prepare": "simple-git-hooks"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.4.1",
    "@antfu/ni": "^26.0.1",
    "@antfu/utils": "^9.2.1",
    "@types/node": "^24.5.2",
    "bumpp": "^10.2.3",
    "eslint": "^9.36.0",
    "lint-staged": "^16.2.0",
    "simple-git-hooks": "^2.13.1",
    "tinyexec": "^1.0.1",
    "tsdown": "^0.15.4",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vite": "^7.1.7",
    "vitest": "^3.2.4",
    "vitest-package-exports": "^0.1.1",
    "yaml": "^2.8.1"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm i --frozen-lockfile --ignore-scripts --offline && npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
