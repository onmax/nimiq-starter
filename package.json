{
  "name": "nimiq-starter",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@10.17.1",
  "description": "Nimiq Web Client starter templates for different frameworks",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/onmax/nimiq-starter.git"
  },
  "bugs": "https://github.com/onmax/nimiq-starter/issues",
  "keywords": [
    "nimiq",
    "blockchain",
    "web3",
    "starter",
    "template",
    "monorepo"
  ],
  "scripts": {
    "build": "nr -r build",
    "dev": "nr -r dev",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepublishOnly": "nr build",
    "release": "bumpp -r && pnpm -r publish",
    "test": "nr -r test",
    "typecheck": "nr -r typecheck",
    "prepare": "simple-git-hooks"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:cli",
    "@antfu/ni": "catalog:cli",
    "@antfu/utils": "catalog:inlined",
    "@types/node": "catalog:types",
    "bumpp": "catalog:cli",
    "eslint": "catalog:cli",
    "lint-staged": "catalog:cli",
    "simple-git-hooks": "catalog:cli",
    "tinyexec": "catalog:testing",
    "tsdown": "catalog:cli",
    "tsx": "catalog:cli",
    "typescript": "catalog:cli",
    "vite": "catalog:cli",
    "vitest": "catalog:testing",
    "vitest-package-exports": "catalog:testing",
    "yaml": "catalog:testing"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm i --frozen-lockfile --ignore-scripts --offline && npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
